{
  "root": true,
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "no-shadow": "off",
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "function-paren-newline": [
      "error",
      "consistent"
    ],
    "linebreak-style": "off",
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "ignore",
        "objects": "ignore",
        "imports": "ignore",
        "exports": "ignore"
      }
    ],
    "radix": [
      "error",
      "as-needed"
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "tabWidth": 4
      }
    ],
    "computed-property-spacing": [
      "error",
      "always"
    ],
    "space-before-function-paren": "off",
    "semi": "off"
  }
}
